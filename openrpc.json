{
    "openrpc": "1.0.0",
    "info": {
        "version": "0.1.0",
        "title": "Rainbow Bridge Relay Service",
        "description": "A service to control rainbow bridge relayers.",
        "license": {
            "name": "Apache 2.0",
            "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "servers": [
        {
            "url": "http://localhost:7755"
        }
    ],
    "methods": [
        {
            "name": "status",
            "summary": "Returns status data for relayer service included what's running",
            "params": [],
            "result": {
                "name": "status",
                "description": "Service status description",
                "schema": {
                    "$ref": "#/components/schemas/Status"
                }
            }
        },
        {
            "name": "config",
            "summary": "Returns redacted configuration data for the relayer service",
            "params": [],
            "result": {
                "name": "configResult",
                "description": "Configuration of the service",
                "schema": {
                    "$ref": "#/components/schemas/Config"
                }
            }
        },
        {
            "name": "start",
            "summary": "Starts a relayer of type eth2near or near2eth/ if already running it nops",
            "params": [],
            "result": {
                "name": "relayerStart",
                "description": "`true` if relayer started",
                "schema": {
                    "$ref": "#/components/schemas/Status"
                }
            }
        },
        {
            "name": "stop",
            "summary": "Starts a relayer of type eth2near or near2eth/ if already running it nops",
            "params": [],
            "result": {
                "name": "relayerStop",
                "description": "`true` if relayer stopped",
                "schema": {
                    "$ref": "#/components/schemas/Status"
                }
            }
        }
    ],
    "components": {
        "schemas": {
            "Config": {
                "title": "configData",
                "type": "object",
                "properties": {
                    "name": {
                        "title":"name",
                        "type":"string"
                    }
                }
            },
            "Status": {
                "title": "statusData",
                "type": "string",
                "enum": ["running","stopped","uninitialized","initialized"]

            },
            "RelayerStatus": {
                "title": "relayerStatus",
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            },
            "RelayerStatuses": {
                "title": "relayerStatuses",
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/RelayerStatus"
                }
            },
            "RelayerType": {
                "title": "relayerType",
                "description": "The type for a relayer",
                "type": "string",
                "enum": [
                    "eth2near",
                    "near2eth"
                ]
            },
            "Timestamp": {
                "title": "timestamp",
                "type": "number"
            }
        },
        "contentDescriptors": {
            "RelayerType": {
                "name": "relayerType",
                "description": "The type of relayer you're refering to",
                "summary": "The relayer type",
                "schema": {
                    "$ref": "#/components/schemas/RelayerType"
                }
            },
            "Timestamp": {
                "name": "timestamp",
                "summary": "unix timestamp in seconds",
                "required": false,
                "description": "defaults to last 1hr in server time",
                "schema": {
                    "$ref": "#/components/schemas/Timestamp"
                }
            }
        }
    }
}